{
	"root": true,
	"env": {
		"browser": true,
		"node": true
	},
	"parserOptions": {
		"parser": "@babel/eslint-parser",
		"requireConfigFile": false
	},
	"extends": [
		"@nuxtjs",
		"eslint:recommended",
		"plugin:nuxt/recommended"
	],
	"rules": {
		"max-len": [
			"error",
			{
				"code": 160,
				"tabWidth": 4,
				"ignoreStrings": true
			}
		],
		"no-undefined": "error",
		"arrow-parens": [
			"error",
			"as-needed"
		],
		"arrow-spacing": [
			"error",
			{
				"before": true,
				"after": true
			}
		],
		"vue/html-indent": ["error", "tab"],
		"indent": ["error", "tab"],
		"no-tabs": 0,
		"vue/html-self-closing": ["error", {
			"html": {
			  "void": "always",
			  "normal": "always",
			  "component": "always"
			},
			"svg": "always",
			"math": "always"
		}],
		"vue/attribute-hyphenation": ["error", "never", {
			"ignore": []
		}]
	}
}
